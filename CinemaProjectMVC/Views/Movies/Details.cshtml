@model CinemaProjectMVC.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@{
    var stars = Model.Rating.Stars == 1 ? "Star" : "Stars";
}

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Duration (Minutes): @Model.DurationInMinutes</li>
    <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Rating: @Model.Rating.Stars @stars</li>
</ul>