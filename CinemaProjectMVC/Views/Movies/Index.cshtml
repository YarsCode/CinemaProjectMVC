@model IEnumerable<CinemaProjectMVC.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="title">
    <h2>Movies</h2>

    <p style="padding: 10px; margin: auto 5%;">
        @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "button" })
    </p>
</div>


<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Duration (Minutes)</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (!Model.Any())
            {
                <tr>
                    <td class="empty-table" colspan="5">There are no movies.</td>
                </tr>
            }
        }
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = @movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
                <td>@movie.DurationInMinutes</td>
                <td>@movie.Rating.Stars</td>
            </tr>

        }
    </tbody>
</table>

